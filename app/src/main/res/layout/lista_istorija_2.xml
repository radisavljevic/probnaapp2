<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_default_radius"
    android:clickable="true"
    android:elevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/cardview_dark_background"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/nazivTrebovanja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="8dp"
            android:text="naziv: "
            android:textColor="@color/svetla"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/kolicinaTrebovanja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nazivTrebovanja"
            android:paddingLeft="8dp"
            android:text="količina: "
            android:textColor="@color/svetla"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/jmTrebovanja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nazivTrebovanja"
            android:layout_toRightOf="@id/kolicinaTrebovanja"
            android:paddingLeft="8dp"
            android:text="j.mere: "
            android:textColor="@color/svetla"
            android:textSize="17sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>