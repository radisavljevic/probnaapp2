<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/cardview_dark_background"
    android:layout_margin="@dimen/cardview_default_radius"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/nazivGrupeTreb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="naziv"
            android:textSize="18sp"
            android:textColor="@color/cardview_light_background"/>

        <TextView
            android:id="@+id/sifraGrupeTreb"
            android:layout_below="@+id/nazivGrupeTreb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sifra"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/cardview_light_background"/>
        <TextView
            android:id="@+id/kolicinaTreb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="koliÄina"
            android:textSize="18sp"
            android:layout_toRightOf="@id/sifraGrupeTreb"
            android:layout_alignBottom="@id/sifraGrupeTreb"
            android:textColor="@color/cardview_light_background"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/jMerTreb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_toRightOf="@id/kolicinaTreb"
            android:layout_alignBottom="@id/kolicinaTreb"
            android:text="j.mere"
            android:textColor="@color/cardview_light_background"
            android:paddingLeft="5dp"
            />

        <ImageButton
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete_button"
            android:fadingEdge="vertical"
            android:background="@color/svetla"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/jMerTreb"
            android:layout_marginBottom="5dp"

            />

    </RelativeLayout>
</android.support.v7.widget.CardView>